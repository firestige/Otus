<?xml version="1.0" encoding="ISO-8859-1" ?>
<!--
  UAS (User Agent Server) default scenario
  Flow: INVITE -> 100 Trying -> 180 Ringing -> 200 OK -> ACK -> [hold] -> BYE -> 200 OK
-->
<scenario name="UAS_default">

  <!-- Wait for INVITE -->
  <recv request="INVITE" crlf="true">
  </recv>

  <!-- 100 Trying (immediate) -->
  <send>
    <![CDATA[
      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <!-- Simulated ring delay -->
  <pause milliseconds="1000"/>

  <!-- 180 Ringing -->
  <send>
    <![CDATA[
      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag00[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:uas@[local_ip]:[local_port]>
      Content-Length: 0

    ]]>
  </send>

  <!-- Simulated answer delay -->
  <pause milliseconds="1000"/>

  <!-- 200 OK with SDP -->
  <send retrans="500">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag00[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:uas@[local_ip]:[local_port]>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=uas 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=SIPp UAS Session
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0 8 18
      a=rtpmap:0 PCMU/8000
      a=rtpmap:8 PCMA/8000
      a=rtpmap:18 G729/8000
      a=sendrecv
    ]]>
  </send>

  <!-- Wait for ACK -->
  <recv request="ACK">
  </recv>

  <!-- Hold the call (RTP echo enabled via -rtp_echo flag) -->
  <pause milliseconds="$CALL_DURATION_MS"/>

  <!-- Wait for BYE from UAC -->
  <recv request="BYE">
  </recv>

  <!-- 200 OK to BYE -->
  <send>
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <!-- SIPp statistics label -->
  <ResponseTimeRepartition value="10, 20, 30, 40, 50, 100, 150, 200"/>
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>
